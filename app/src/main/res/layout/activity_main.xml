<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/pay_using_paystack"
            android:layout_width="230dp"
            android:layout_height="89dp"
            android:id="@+id/btnPaystack"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="192dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="@string/pay_using_rave"
            android:layout_width="230dp"
            android:layout_height="89dp"
            android:id="@+id/btnRave"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnPaystack"/>

</android.support.constraint.ConstraintLayout>